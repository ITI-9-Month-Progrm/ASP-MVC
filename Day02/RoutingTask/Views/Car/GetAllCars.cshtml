
@{
    ViewBag.Title = "GetAllCars";
    var carList = (List<RoutingTask.Models.Car>)ViewBag.carList;
}

<h2>GetAllCars</h2>
<table class="table-bordered table table-striped table-hover">
    <thead style="background-color:darkgray;font-weight:900;text-align:center">
        <tr>
            <td ></td>
            <td></td>
            <td></td>
            <td>ID</td>
            <td>Color</td>
            <td>Model</td>
            <td>Manfacture</td>
        </tr>
    </thead>
    <tbody>
        @foreach (var car in carList)
        {
            <tr>
                <td><a href="/Car/CarDetails/@car.Num">Details</a></td>
                <td><a href="/Car/EditCar/@car.Num">Edit</a></td>
                <td><a href="/Car/DeleteCar/@car.Num">Delete</a></td>

                <td>@car.Num</td>

                <td>@car.Color</td>
                <td>@car.Model</td>
                <td>@car.Manfacture</td>
            </tr>
        }
    </tbody>
</table>
<Button class="btn btn-primary "><a href="/Car/CreateCar/" class="text-uppercase" style="color:white">Create</a></Button>

